{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es2022", "dom"],
    "paths": {
      "ng-select2-component": [
        "dist/ng-select2-component"
      ],
      "ng-select2-component/*": [
        "dist/ang-select2-component/*"
      ]
    },
    "useDefineForClassFields": false
  }
}
